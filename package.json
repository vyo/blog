    "mithril",
    "milligram",
    "reveal"
  ],
  "author": "Manuel Weidmann",
  "license": "MIT",
  "dependencies": {
    "@hapi/basic": "^5.1.1",
    "@hapi/good": "^8.2.3",
    "@hapi/hapi": "^18.4.0",
    "@hapi/hoek": "^8.2.4",
    "@hapi/inert": "^5.2.2",
    "@hapi/joi": "^16.1.4",
    "@hapi/topo": "^3.1.4",
    "bunyan": "^1.8.12",
    "glob": "^7.1.4",
    "good-bunyan": "^3.0.1",
    "moment": "^2.29.2"
  },
  "engines": {
    "node": "9.4.x",
    "npm": "6.0.x"
  },
  "standard": {
    "ignore": [
      "public/lib/",
      "public/plugin/",
      "public/js/reveal.js"
    ]
