{
  "name": "vyo.sh",
  "version": "1.4.0",
  "description": "Node/Mithril app powering weidmann.design",
  "repository": "https://github.com/vyo/weidmann.design",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "test": "echo \"Error: no test specified\" && exit 0",
